
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model CreateCategoryDto

<h2>Yeni Kategori Oluştur</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Kategori Adı </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Kategori Açıklaması</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Kategori Görseli</label>
        <input type="file" asp-for="UploadPath" class="form-control-file" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark">Oluştur</button>
        <a asp-action="Index" class="btn btn-warning ">Kategori Listesine Dön</a>
    </div>
    

</form>


