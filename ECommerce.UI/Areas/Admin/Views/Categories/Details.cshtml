
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

@model UpdateCategoryDto

<h2>Kategori Detayları</h2>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">Kategori Adı:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Kategori Açıklaması:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Kategori Görseli:</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="Author Image" class="img-fluid" width="600" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark ">Düzenle</a> |
    <a asp-action="Index" class="btn btn-warning ">Kategori Listesine Dön</a>
</div>



