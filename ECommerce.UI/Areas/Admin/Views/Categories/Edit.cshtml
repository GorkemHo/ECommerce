
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

@model UpdateCategoryDto

<h2>Kategori Düzenle</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Kategori Adı </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Kategoriye Açıklaması</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Kategori Görseli</label>
        <input type="file" asp-for="UploadPath" class="form-control-file" />
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-dark " />|
        <a asp-action="Index">Kategori Listesine Dön</a>
    </div>
</form>


