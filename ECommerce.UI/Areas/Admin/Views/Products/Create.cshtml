
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model CreateProductDto

<h2>Yeni Ürün Oluştur</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label>Ürün Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Fiyatı</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Rengi</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Adedi</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Kategorisi</label>
    <select asp-for="CategoryId" class="form-control">
        @foreach (var item in Model.Categories)
        {
            <option value="@item.Id">@item.Name</option>
        }

    </select>
</div>
    <div class="form-group">
        <label>Ürün Açıklaması</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Görseli</label>
        <input type="file" asp-for="UploadPath" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-dark">Kaydet</button> |
    <a asp-action="Index" class="btn btn-warning">Ürün Listesine Geri Dön</a>
</form>


