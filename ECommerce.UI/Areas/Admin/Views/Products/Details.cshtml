
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model ProductVm

<h2>Ürün Detayları</h2>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">Ürün Adı:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Fiyat:</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Renk:</dt>
        <dd class="col-sm-10">@Model.Color</dd>

        <dt class="col-sm-2">Adet:</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Açıklama:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Kategori:</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>


        <dt class="col-sm-2">Image:</dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="Author Image" class="img-fluid" width="600" />
        </dd>


    </dl>
</div>



<p>
    <a asp-action="Index">Back to List</a>
</p>


