
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "AssignRole";
    

}
@model List<RoleAssignVm>

<form method="post">
    @for (int i = 0; i <Model.Count ; i++)
    {
        <div class="form-check">
            <input type = "hidden" asp-for="@Model[i].RoleId"/>
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for ="@Model[i].Exists" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].Exists">@Model[i].Name</label>
        </div>
    }
    <button class="btn btn-dark">Değişiklikleri Kaydet</button>
</form>
<br />
<a asp-area="Admin" asp-controller="Roles" asp-action="UserRoleList" class="btn btn-dark">Kullanıcı Rol Listesi</a>
