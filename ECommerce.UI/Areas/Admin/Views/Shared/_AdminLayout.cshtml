    <script>
        // Genel toplamı hesaplayan JavaScript fonksiyonu
        function calculateTotalPrice() {
            var totalPriceElements = document.querySelectorAll('.totalPrice');

            totalPriceElements.forEach(function (element) {
                var totalPrice = 0;
                var productPrices = element.querySelectorAll('.productPrice');
                var quantities = element.querySelectorAll('.quantity');

                for (var i = 0; i < productPrices.length; i++) {
                    var productPrice = parseFloat(productPrices[i].textContent.trim());
                    var quantity = parseInt(quantities[i].textContent.trim());
                    totalPrice += productPrice * quantity;
                }

                // Toplam fiyatı ilgili satırın totalPrice elementine yaz
                var totalPriceElement = element.querySelector('.totalPrice');
                totalPriceElement.textContent = totalPrice.toFixed(2);
            });
        }
        // Sayfa yüklendiğinde toplam fiyatları hesapla
        document.addEventListener('DOMContentLoaded', function () {
            calculateTotalPrice();
        });
    </script>
