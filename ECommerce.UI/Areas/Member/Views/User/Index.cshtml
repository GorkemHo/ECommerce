
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@model ECommerce.Domain.Entities.AppUser

<h5 class="text-center text-primary font-weight-bold px-3 mr-3 mt-5">Kullanıcı Bilgileri</h5>


<div>
    <dl class="row">
        <dt class="col-sm-2">
            Adınız
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
           Soyadınız
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Kullanıcı Adınız
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            E-Postanız
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Telefon Numaranız
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Adresiniz
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Profil Resminiz
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="User Image" style="max-width: 200px;" />
            }
            else
            {
                <span>Resim bulunmamaktadır</span>
            }
        </dd>
        
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-controller="User" class="btn btn-primary">Bilgileri Düzenle</a>
</div>

