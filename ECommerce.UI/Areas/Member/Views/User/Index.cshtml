
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@model ECommerce.Domain.Entities.AppUser

<h2>User Profile</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Kullanıcı Adı:
        </dt>
        <dd class="col-sm-10">
            @Model.UserName
        </dd>
        <dt class="col-sm-2">
            İsim:
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Soy İsim:
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Adres:
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            E-Posta:
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>

        <dt class="col-sm-2">
            Profil Resmi:
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="User Image" style="max-width: 200px;" />
            }
            else
            {
                <span>Resim Yüklenmemiş</span>
            }
        </dd>
        <!-- Diğer kullanıcı bilgileri için aynı şekilde devam edebilirsiniz -->
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-controller="User" class="btn btn-primary">Profili Güncelle</a>
</div>

