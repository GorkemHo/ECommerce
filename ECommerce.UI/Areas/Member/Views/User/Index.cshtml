
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ECommerce.Domain.Entities.AppUser

<h2>User Profile</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            First Name:
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <dt class="col-sm-2">
            Last Name:
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Image:
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" alt="User Image" style="max-width: 200px;" />
            }
            else
            {
                <span>No image available</span>
            }
        </dd>
        <!-- Diğer kullanıcı bilgileri için aynı şekilde devam edebilirsiniz -->
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-controller="User" class="btn btn-primary">Edit Profile</a>
</div>

