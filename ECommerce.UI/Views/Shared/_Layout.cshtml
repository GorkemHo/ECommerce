
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>GADİ Çakmakları</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="Free HTML Templates" name="keywords" />
    <meta content="Free HTML Templates" name="description" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
          rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
          rel="stylesheet" />

    <!-- Libraries Stylesheet -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="row bg-secondary py-2 px-xl-5">
                <div class="col-lg-11 text-lg-right">
                    <div class="d-flex justify-content-sm-end ">
                        <a class="text-dark mr-3" asp-area="Member" asp-controller="User" asp-action="Index" >Profilini Görüntüle (@User.Identity.Name)</a>
                        <a class="text-dark " asp-area="" asp-controller="Account" asp-action="Logout">Çıkış Yap</a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row bg-secondary py-2 px-xl-5">
                <div class="col-lg-11 text-lg-right">
                    <div class="d-flex justify-content-sm-end ">
                        <a class="text-dark mr-3" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        <a class="text-dark" asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                    </div>
                </div>
            </div>
        }

        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a sp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold">
                        <span class="text-primary font-weight-bold border px-3 mr-1">GADİ</span>
                    </h1>
                </a>
            </div>
            <div class="col-lg-6 col-6 text-left">
                <form method="get" asp-action="SearchProduct" asp-controller="Home">
                    <div class="input-group">
                        <input type="text"
                               class="form-control"
                               name="searchTerm" 
                               placeholder="Ürün ara..." />
                        <div class="input-group-append">
                            <button type="submit" class="input-group-text bg-transparent text-primary" style="border: none;">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            @* <div class="col-lg-3 col-6 text-right">
            <a asp-area="Member" asp-controller="Cart" asp-action="Index" class="nav-item nav-link fas fa-shopping-cart text-primary btn border">
            <i class="fas fa-shopping-cart text-primary"></i>
            <span class="badge">0</span>
            </a>
            </div> *@

            @{
                if (User.Identity.IsAuthenticated)
                {
                    <div class="col-lg-3 col-6 text-right">
                        <a asp-area="Member" asp-controller="Cart" asp-action="Index" class="nav-item nav-link fas fa-shopping-cart text-primary btn border">
                            <i class="fas fa-shopping-cart text-primary"></i>
                            <span class="badge">@ViewBag.CartItemCount</span>
                        </a>
                    </div>
                }
                else
                {
                    <div class="col-lg-3 col-6 text-right">
                        <a asp-controller="Account" asp-action="Login" class="nav-item nav-link fas fa-sign-in-alt text-primary btn border">
                            <i class="fas fa-sign-in-alt text-primary"></i>
                            <span class="badge"></span>
                        </a>
                    </div>
                }
            }

        </div>
        <!-- Topbar End -->
        <!-- Navbar Start -->
        <div class="container-fluid mb-5 ">
            <div class="border-top px-xl-5  border-bottom">

                <div class="row border-top px-xl-5 offset-3 border-bottom">
                    <div class="col-lg-9">
                        <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                            <a href="" class="text-decoration-none d-block d-lg-none">
                                <h1 class="m-0 display-5 font-weight-semi-bold">
                                    <span class="text-primary font-weight-bold border px-3 mr-1">GADİ</span>Mağaza
                                </h1>
                            </a>
                            <button type="button"
                                    class="navbar-toggler"
                                    data-toggle="collapse"
                                    data-target="#navbarCollapse">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse justify-content-between"
                                 id="navbarCollapse">
                                <div class="navbar-nav mr-auto py-0 ">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Anasayfa</a>

                                    <a asp-area="" asp-controller="Home" asp-action="ProductDetail" class="nav-item nav-link">Ürün Detayı</a>



                                    <div class="nav-item dropdown">
                                        <a href="#"
                                           class="nav-link dropdown-toggle"
                                           data-toggle="dropdown">Kategoriler</a>
                                        <div class="dropdown-menu rounded-0 m-0">
                                            <a asp-area="" asp-controller="Home" asp-action="SearchProduct" asp-route-categoryName="Çok Amaçlı" class="dropdown-item">Çok Amaçlı Çakmaklar</a>
                                            <a asp-area="" asp-controller="Home" asp-action="SearchProduct" asp-route-categoryName="Mumlar İçin" class="dropdown-item">Mum için Çakmaklar</a>
                                            <a asp-area="" asp-controller="Home" asp-action="SearchProduct" asp-route-categoryName="Aksesuar" class="dropdown-item">Aksesuarlar</a>
                                            <a asp-area="" asp-controller="Home" asp-action="SearchProduct" asp-route-categoryName="" class="dropdown-item">Tüm Ürünler</a>
                                        </div>
                                    </div>
                                </div>
                        </nav>
                    </div>
                </div>

            </div>
            <!-- Navbar End -->
            @RenderBody()

            <!-- Footer Start -->
            <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
                <div class="row px-xl-5 pt-5">
                    <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                        <a href="" class="text-decoration-none">
                            <h1 class="mb-4 display-5 font-weight-semi-bold">
                                <span class="text-primary font-weight-bold border border-white px-3 mr-1">GADİ</span>
                            </h1>
                        </a>
                        <p>
                            Dolore erat dolor sit lorem vero amet. Sed sit lorem magna, ipsum no
                            sit erat lorem et magna ipsum dolore amet erat.
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-map-marker-alt text-primary mr-3"></i> Dolore erat
                            dolor sit lorem vero
                        </p>
                        <p class="mb-2">
                            <i class="fa fa-envelope text-primary mr-3"></i>info@example.com
                        </p>
                        <p class="mb-0">
                            <i class="fa fa-phone-alt text-primary mr-3"></i>+01 111 11 11
                        </p>
                    </div>
                    <div class="col-lg-8 col-md-12">
                        <div class="row">
                            <div class="col-md-4 mb-5 offset-8">
                                <h5 class="font-weight-bold text-dark mb-4">Hızlı Linkler</h5>
                                <div class="d-flex flex-column justify-content-start">
                                    <div class="navbar-nav">

                                        <a class="text-dark mb-2 nav-item " asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Anasayfa</a>
                                        <a class="text-dark mb-2 nav-item " asp-area="" asp-controller="Home" asp-action="AllProducts"><i class="fa fa-angle-right mr-2"></i>Tüm Ürünler</a>
                                        <a class="text-dark mb-2 nav-item " asp-area="Member" asp-controller="Cart" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Sepet</a>
                                        <a class="text-dark mb-2 nav-item " asp-area="" asp-controller="Home" asp-action="Contact"><i class="fa fa-angle-right mr-2"></i>İletişim</a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row border-top border-light mx-xl-5 py-4">
                    <div class="col-md-6 px-xl-0">
                        <p class="mb-md-0 text-center text-md-left text-dark">
                            &copy;
                            <a class="text-dark font-weight-semi-bold" href="#">DAGİ Çakmakları</a>. Tüm Hakları Saklıdır. <br />
                            <a class="text-dark font-weight-semi" href="https://htmlcodex.com">HTML Kodları</a>
                            <a href="https://themewagon.com" target="_blank">ThemeWagon</a>Tarafından sağlanmıştır.
                        </p>
                    </div>
                    <div class="col-md-6 px-xl-0 text-center text-md-right">
                        <img class="img-fluid" src="img/payments.png" alt="" />
                    </div>
                </div>
            </div>
            <!-- Footer End -->
            <!-- Back to Top -->
            <a href="#" class="btn btn-primary back-to-top">
                <i class="fa fa-angle-double-up"></i>
            </a>

            <!-- JavaScript Libraries -->
            <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
            <script src="~/lib/easing/easing.min.js"></script>
            <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>


            <!-- Template Javascript -->
            <script src="~/js/main.js"></script>
            <script>
                // Form submit edildiğinde kontrol işlemleri yapılır
                document.querySelector('form').addEventListener('submit', function (e) {
                    var minPriceInput = document.getElementById('minPrice');
                    var maxPriceInput = document.getElementById('maxPrice');
                    var minPrice = minPriceInput.value;
                    var maxPrice = maxPriceInput.value;

                    // Min ve Max fiyatları kontrol et
                    if ((minPrice !== '' && parseFloat(minPrice) < 0) || (maxPrice !== '' && parseFloat(maxPrice) < 0)) {
                        alert('Fiyatlar 0\'dan küçük olamaz!');
                        e.preventDefault(); // Form submitini engelle
                    }

                    // Eğer min fiyat varsa ve max fiyat varsa kontrolü yap
                    if (minPrice !== '' && maxPrice !== '') {
                        if (parseFloat(minPrice) > parseFloat(maxPrice)) {
                            alert('Minimum fiyat, maksimum fiyattan büyük olamaz!');
                            e.preventDefault(); // Form submitini engelle
                        }
                    }
                });
            </script>


            @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
