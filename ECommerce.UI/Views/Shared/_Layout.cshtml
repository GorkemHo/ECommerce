        <!-- Navbar Start -->
        <div class="container-fluid mb-5 ">
            <div class="border-top px-xl-5  border-bottom">

                <div class="row border-top px-xl-5 offset-3 border-bottom">
                    <div class="col-lg-9">
                        <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                            <a href="" class="text-decoration-none d-block d-lg-none">
                                <h1 class="m-0 display-5 font-weight-semi-bold">
                                    <span class="text-primary font-weight-bold border px-3 mr-1">GADİ</span>Mağaza
                                </h1>
                            </a>
                            <button type="button"
                                    class="navbar-toggler"
                                    data-toggle="collapse"
                                    data-target="#navbarCollapse">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse justify-content-between"
                                 id="navbarCollapse">
                                <div class="navbar-nav mr-auto py-0 ">
                                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link active">Anasayfa</a>

                                    <a sp-area="" asp-controller="Home" asp-action="ProductDetails" class="nav-item nav-link">Ürün Detayı</a>
                                    <a sp-area="" asp-controller="Home" asp-action="Cart" class="nav-item nav-link">Sepet</a>

                                    
                                    <div class="nav-item dropdown">
                                        <a href="#"
                                           class="nav-link dropdown-toggle"
                                           data-toggle="dropdown">Kategoriler</a>
                                        <div class="dropdown-menu rounded-0 m-0">
                                            <a href="#" class="dropdown-item">Çok Amaçlı Çakmaklar</a>
                                            <a href="#" class="dropdown-item">Mum için Çakmaklar</a>
                                            <a href="#" class="dropdown-item">Aksesuarlar</a>
                                            <a href="shop.html" class="dropdown-item">Tüm Ürünler</a>

                                        </div>
                                    </div>


                                </div>
                        </nav>


                    </div>
                </div>

            </div>
            <!-- Navbar End -->

            @RenderBody()

            <!-- Footer Start -->
            <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
                <div class="row px-xl-5 pt-5">
                    <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                        <a href="" class="text-decoration-none">
                            <h1 class="mb-4 display-5 font-weight-semi-bold">
                                <span class="text-primary font-weight-bold border border-white px-3 mr-1">GADİ</span>
                            </h1>
                        </a>
                        <p>
